<%= form_for(@portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 12 %>
    </div>
  </div>
  <div class="col-md-12">
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name, class: 'form-control' %>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block'%>
      <% end %>
    </div>
  </div>
</div>
